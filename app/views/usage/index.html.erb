  <hr style="clear: both">

  <footer>
    <p>&copy; PG&E 2013</p>
  </footer>

  </div>
  <!-- /container -->
  
  <div id="placeholder" style="display:none"></div>


  <script>

    if (QueryString.page_view == 'meter') {
        $('#placeholder').hide();
        $('#main').show();
    } else if (QueryString.page_view == 'graph') {
        $('#main').hide();
        Graph.show();
        $('#placeholder').show();
    } else {
        $(function() {
            window.addEventListener("orientationchange", function() {
                switch(window.orientation) {
                    case -90: case 90:
                    $('#main').hide();
                    Graph.show();
                    $('#placeholder').show();
                    break;
                    default:
                        $('#placeholder').hide();
                        $('#main').show();
                        break;
                }
            }, false);

            $('body').dblclick(function() {
                if ($('#main').is(':hidden')) {
                    $('#placeholder').hide();
                    $('#main').show();
                } else {
                    $('#main').hide();
                    Graph.show();
                    $('#placeholder').show();
                }
            });

        });

     }
  </script>
</body>
</html>
